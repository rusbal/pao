<h1>Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Client Name</th>
      <th scope="col">Nature</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.client.name %></td>
        <td><%= request.nature %></td>
        <td><%= request.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
