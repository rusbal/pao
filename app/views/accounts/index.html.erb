<h1>Accounts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.role %></td>
        <td><%= account.name %></td>
        <td><%= account.user.email %></td>
        <td><%= account.user.signed_in? ? "Active" : "Not Available" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
